<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="normalText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#444</item>
        <item name="android:textSize">14sp</item>
    </style>

      <!--录音-->

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

      <!--按钮开关-->
    <style name="item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <!--登陆注册框的字体颜色-->
    <!--<style name="login_register_textcolor">
        <item name="android:textColor">@android:color/black</item>
    </style>-->

    <!-- TabHost标签按钮样式 -->
    <style name="tab_button_bottom">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textSize">@dimen/tab_button_bottom_textSize</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/deepskyblue</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">@dimen/tab_button_bottom_paddingTop</item>
        <item name="android:drawablePadding">@dimen/tab_button_bottom_drawablePadding</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
