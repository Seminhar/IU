<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"

              android:background="@drawable/personal_info_bg">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:weightSum="1"
            android:background="#ff102ce5"
            android:layout_weight="5">
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/return1"


                android:background="@drawable/personal_info_return"
                android:layout_gravity="center"
                android:layout_weight="0">
        </ImageButton>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/head1"

                android:textColor="#ffe5e5e5"
                android:text="个人信息"
                android:textIsSelectable="false"
                android:textSize="22dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:gravity="center"/>
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/set"

                android:background="@drawable/personal_info_setting"
                android:layout_gravity="center|right"
                android:layout_weight="0">
        </ImageButton>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="0">

        <ImageView
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/ivProfilePic"
                android:src="@drawable/user"
                />

    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:layout_gravity="top">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/micon"
                android:weightSum="1"
                >


            //姓名
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:text="姓 名"
                        android:textColor="#ff000000"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.75"
                        android:singleLine="true"
                        android:gravity="left|center_vertical"
                        />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tvRealName"
                        android:layout_weight="0.25"
                        android:textColor="#ff000000"
                        android:textIsSelectable="false"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="3dp"
                        />
            </LinearLayout>
            // Line
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <View  android:layout_height="1dp"
                       android:background="#19000000"
                       android:layout_width="match_parent"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="15dp"/>
            </LinearLayout>

            //昵称
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:text="@string/nickname"
                        android:textColor="#ff000000"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.75"
                        android:singleLine="true"
                        android:gravity="left|center_vertical"
                        />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tvNickname"
                        android:layout_weight="0.25"
                        android:textColor="#ff000000"
                        android:textIsSelectable="false"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="3dp"
                        />
            </LinearLayout>
            // Line
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <View  android:layout_height="1dp"
                       android:background="#19000000"
                       android:layout_width="match_parent"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="15dp"/>
            </LinearLayout>


            //性别
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:text="性 别"
                        android:textColor="#ff000000"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.75"
                        android:singleLine="true"
                        android:gravity="left|center_vertical"
                        />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tvSex"
                        android:layout_weight="0.25"
                        android:textColor="#ff000000"
                        android:textIsSelectable="false"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="3dp"
                        />
            </LinearLayout>

            //Line
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <View  android:layout_height="1dp"
                       android:background="#19000000"
                       android:layout_width="match_parent"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="15dp"/>
            </LinearLayout>

            //Date of birth
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:text="出生日期"
                        android:textColor="#ff000000"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.75"
                        android:singleLine="true"
                        android:gravity="left|center_vertical"
                        />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tvDob"
                        android:layout_weight="0.25"
                        android:textColor="#ff000000"
                        android:textIsSelectable="false"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="3dp"
                        />
            </LinearLayout>

            //Line
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <View  android:layout_height="1dp"
                       android:background="#19000000"
                       android:layout_width="match_parent"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="15dp"/>
            </LinearLayout>

            //手机号码
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:text="手机号码"
                        android:textColor="#ff000000"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.75"
                        android:singleLine="true"
                        android:gravity="left|center_vertical"
                        />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tvPhone"
                        android:layout_weight="0.25"
                        android:textColor="#ff000000"
                        android:textIsSelectable="false"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="3dp"
                        />
            </LinearLayout>

            //Line
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <View  android:layout_height="1dp"
                       android:background="#19000000"
                       android:layout_width="match_parent"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="15dp"/>
            </LinearLayout>
            //Address

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:text="地 址"
                        android:textColor="#ff000000"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.75"
                        android:singleLine="true"
                        android:gravity="left|center_vertical"
                        />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tvAddress"
                        android:layout_weight="0.25"
                        android:textColor="#ff000000"
                        android:textIsSelectable="false"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="3dp"
                        />
            </LinearLayout>
            //Line
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <View  android:layout_height="1dp"
                       android:background="#19000000"
                       android:layout_width="match_parent"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="15dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:text="电子邮件"
                        android:textColor="#ff000000"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.75"
                        android:singleLine="true"
                        android:gravity="left|center_vertical"
                        />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tvEmail"
                        android:layout_weight="0.25"
                        android:textColor="#ff000000"
                        android:textIsSelectable="false"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="3dp"
                        />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
    // Button
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5">
        <TextView
                android:textSize="@dimen/textSize"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/green"
                android:text="加为好友"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:singleLine="true"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:focusableInTouchMode="false"
                android:id="@+id/btnAddFriend"
                android:visibility="gone"/>

        <TextView
                android:textSize="@dimen/textSize"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/green"
                android:text="给TA发消息"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:singleLine="true"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:focusableInTouchMode="false"
                android:id="@+id/btnSendMsg"/>
        <TextView
                android:textSize="@dimen/textSize"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/red"
                android:text="移除好友"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:singleLine="true"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:focusableInTouchMode="false"
                android:id="@+id/btnRemoveFriend"/>

    </LinearLayout>
</LinearLayout>

